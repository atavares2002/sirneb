      <div class="absolute inset-0">
        <!-- Main Image -->
        <Image
          src={heroImg}
          alt="A bird sitting on a nest of eggs."
          class="w-full h-full object-cover"
        />

        <!-- Decorative Elements -->
        <div
          class="absolute -top-4 -right-4 w-72 h-72 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full opacity-10 blur-3xl"
        >
        </div>
        <div
          class="absolute -bottom-8 -left-8 w-64 h-64 bg-gradient-to-tr from-blue-400 to-cyan-400 rounded-full opacity-10 blur-3xl"
        >
        </div>
      </div>
